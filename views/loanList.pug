// loanList.pug
doctype html
html
  head
    title Loan Lists
    style.
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        text-align: left;
        padding: 8px;
        border-bottom: 1px solid #ddd;
      }
      tr:hover {
        background-color: #f5f5f5;
      }
      h1 {
          text-align: center;
      }
  body
    h1 Loan Lists || Pug View
    table
      tr(style="background-color: #ffa07a;")
        th Customer ID
        th Customer Name
        th Phone Number
        th Address
        th Loan Amount
        th Interest
        th Loan Term Years
        th Loan Type 
        th Description 
        th Created Date 
      // Loop through loans data and populate the table rows
      each loan in loans
        tr
          td= loan.id
          td= loan.customerName
          td= loan.phoneNumber
          td= loan.address
          td= loan.loanAmount
          td= loan.interest
          td= loan.loanTermYears
          td= loan.loanType
          td= loan.description
          td= loan.createdDate